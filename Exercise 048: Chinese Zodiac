# Loop to check user input for year
loop=1
while loop==1:
    try:
        year = int(input('Please type the year:'))
        if year<0:
            print('Year cannot be negative!')
        else:
            loop=0
    except ValueError:
        print('Please enter a proper year!')

# defining conditions for the zodiac signs=
zodiac_number = year % 12
if zodiac_number == 0:
    print('Year of the Monkey')
elif zodiac_number == 1:
    print('Year of the Rooster')
elif zodiac_number == 2:
    print('Year of the Dog')
elif zodiac_number == 3:
    print('Year of the Pig')
elif zodiac_number == 4:
    print('Year of the Rat')
elif zodiac_number == 5:
    print('Year of the Ox')
elif zodiac_number == 6:
    print('Year of the Tiger')
elif zodiac_number == 7:
    print('Year of the Hare')
elif zodiac_number == 8:
    print('Year of the Dragon')
elif zodiac_number == 9:
    print('Year of the Snake')
elif zodiac_number == 10:
    print('Year of the Horse')
else:
    print('Year of the Sheep')
